  <script>
    const noBtn = document.getElementById('cta-no-btn');
    // Simple playful interaction logic
    noBtn.addEventListener('click', (e) => {
      e.preventDefault();
      const responses = ["Are you sure?", "Think again!", "Pretty please?", "No isn't an option!", "Try again! ✨"];
      const randomText = responses[Math.floor(Math.random() * responses.length)];
      noBtn.innerText = randomText;
      noBtn.style.color = '#FF8FAB';
    });
